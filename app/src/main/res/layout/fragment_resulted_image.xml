<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Resulted_image">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/resulted_image_img"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:background="#c0c0c0"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="7dp"
                    android:elevation="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/images_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Description"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="2dp"
                            android:background="#c0c0c0"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:layout_weight="1"
                                android:text="Tree Height (FT):"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:background="@drawable/fields"
                                />

                            <TextView
                                android:id="@+id/tree_height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="26"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:background="@drawable/fields"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:textColor="@android:color/black"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Biomass (KG):"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:textColor="@android:color/black"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:background="@drawable/fields"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                />

                            <TextView
                                android:id="@+id/biomass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:background="@drawable/fields"
                                android:text="400"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@android:color/black"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="5dp"
                                android:textSize="14sp"
                                android:background="@drawable/fields"
                                android:text="Carbon Content (KG):"
                                android:layout_weight="1"
                                android:textColor="@android:color/black"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                />

                            <TextView
                                android:id="@+id/carbon_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="200"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@android:color/black"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:background="@drawable/fields"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:layout_weight="1"
                                android:text="Total carbon (KG):"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="30dp"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:background="@drawable/fields"
                                />

                            <TextView
                                android:id="@+id/total_carbon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="45"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:background="@drawable/fields"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>